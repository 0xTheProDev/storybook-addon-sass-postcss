{
  "name": "storybook-addon-sass-postcss",
  "version": "0.1.4",
  "description": "Storybook addon used to run the PostCSS preprocessor with Sass support against your stories.",
  "author": "Progyan Bhattacharya <bprogyan@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/0xTheProDev/storybook-addon-sass-postcss/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/0xTheProDev/storybook-addon-sass-postcss.git"
  },
  "keywords": [
    "css",
    "postcss",
    "sass",
    "scss",
    "storybook",
    "addon",
    "tailwind",
    "react",
    "next",
    "stylesheet"
  ],
  "engines": {
    "node": ">=10"
  },
  "main": "dist/index.js",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "rm -rf dist & tsc",
    "lint": "yarn lint-code && yarn lint-style -c",
    "lint-code": "eslint '{example,src}/**/*.{js,ts,tsx}'",
    "lint-style": "yarn prettier '{example,src}/**/*.{js,ts,tsx,css,html,json,md,mdx,scss,yml}'",
    "test": "jest --passWithNoTests",
    "prepublishOnly": "yarn build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,html,json,md,mdx,scss,yml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@storybook/node-logger": "^6.5.16",
    "css-loader": "^6.8.1",
    "postcss": "^8.4.33",
    "postcss-loader": "^7.3.3",
    "sass": "^1.70.0",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.4"
  },
  "devDependencies": {
    "@babel/core": "^7.23.3",
    "@babel/eslint-parser": "^7.23.3",
    "@babel/plugin-transform-runtime": "^7.23.3",
    "@babel/preset-env": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@types/webpack": "^5",
    "@types/webpack-env": "^1.18.4",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "babel-plugin-dynamic-import-node": "^2.3.3",
    "babel-plugin-require-context-hook": "^1.0.0",
    "eslint": "^8.54.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-ts": "^0.4.2",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^4.3.8",
    "jest": "^29.7.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.8.8",
    "typescript": "^5.2.2",
    "webpack": "^5"
  }
}
